function dragenter() {
  // log('DROPZONE: Enter in zone ')
}

function dragover() {
  // this = dropzone
  this.classList.add('over')

  // get dragging card
  const cardBeingDragged = document.querySelector('.is-dragging')

  // this = dropzone
  this.appendChild(cardBeingDragged)
}

function dragleave() {
  // log('DROPZONE: Leave ')
  // this = dropzone
  this.classList.remove('over')

}

function drop() {
  // log('DROPZONE: dropped ')
  this.classList.remove('over')
}
